    <style name="AppTheme.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--<item name="boxBackgroundColor">@color/uao_edit_bg</item>-->
        <item name="boxStrokeColor">@color/uao_colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/uao_edit_hint_color</item>
        <item name="android:textColor">@color/uao_edit_text_color</item>
        <item name="android:textSize">@dimen/eighteen_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VerificationCodeTextInput" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textinput_verification</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="full_screen_dialog_style" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/uao_colorPrimaryDark</item>
        <item name="colorPrimary">@color/uao_colorPrimary</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:gravity">center</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TitleTextViewStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/uao_textinput_title</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@drawable/spinner_dropdown_arrow</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <!--<style name="TransparentBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>-->

    <style name="AppTheme.TextInputLayoutAutoComplete" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!--<item name="boxBackgroundColor">@color/colorBackground</item>-->
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/textinput_boxborder_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColor">@color/textinput_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UploadButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/uao_lit_orng</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/textinput_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutNoBorder" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/uao_edit_bg</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColor">@color/textinput_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.DownloadButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/uao_dark_green</item>
    </style>

    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/uao_colorPrimary</item>
        <item name="colorPrimaryDark">@color/uao_colorPrimaryDark</item>
        <item name="colorAccent">@color/uao_colorPrimaryLight</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />-->

    <!--<style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />-->

</resources>
